{
  "include": [
    "src/**/*", "tests/**/*",
  ],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "strict": true,
    "rootDir": ".",
    "outDir": "dist/",
    "baseUrl": "src/",
    "paths": {
      "/*.js": [
        "*"
      ],
      "*.js": [
        "*"
      ]
    }
  }
}